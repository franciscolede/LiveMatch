@model IEnumerable<LiveMatch.Models.Estadio>

@{
    ViewData["Title"] = "Index";
}

<h1>Estadios</h1>

<div class="row">
    <div class="col-sm-4">
        <form asp-action="ShowData" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label" for="inputExcel">Agregar Excel</label>
                <input class="form-control-file btn-sm" type="file" id="inputExcel" name="ExcelFile" />
                <button type="submit" class="btn btn-sm btn-warning">Mostrar datos</button>
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


