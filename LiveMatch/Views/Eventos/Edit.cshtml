@model LiveMatch.Models.Evento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visitante" class="control-label"></label>
                <input asp-for="Visitante" class="form-control" />
                <span asp-validation-for="Visitante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeporteRefId" class="control-label"></label>
                <select asp-for="DeporteRefId" class="form-control" asp-items="ViewBag.DeporteRefId"></select>
                <span asp-validation-for="DeporteRefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadioRefId" class="control-label"></label>
                <select asp-for="EstadioRefId" class="form-control" asp-items="ViewBag.EstadioRefId"></select>
                <span asp-validation-for="EstadioRefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEvento" class="control-label"></label>
                <input asp-for="FechaEvento" class="form-control" />
                <span asp-validation-for="FechaEvento" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <label class="control-label">Foto del evento</label>
                    <input asp-for="ImagenEvento" type="file" accept="image/png" />
                </div>
                @if (!string.IsNullOrEmpty(@Model.ImagenEvento))
                {
                    <img src="~/images/eventos/@Model.ImagenEvento"
                         class="rounded-start"
                         height="150" width="150"
                         asp-append-version="true" />
                    <br>
                }

            </div>
            <input type="hidden" asp-for="ImagenEvento" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}