@model LiveMatch.Models.Evento

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Visitante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Visitante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deporte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deporte.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estadio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estadio.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaEvento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEvento)
        </dd>
        <dd>
            @if (!string.IsNullOrEmpty(@Model.ImagenEvento))
            {
                <img src="~/images/eventos/@Model.ImagenEvento"
                     class="rounded-start"
                     height="150" width="150"
                     asp-append-version="true" />
                <br>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
